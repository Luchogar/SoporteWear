<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_favoritas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alephicabod.petagram.Favoritas">

    <include android:id="@+id/appBarDetalle" layout="@layout/appbar_detalle"></include>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listaFavoritas"
        android:layout_below="@+id/appBarDetalle"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
